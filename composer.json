{
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.66",
        "phpro/grumphp": "^2.10",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "scripts": {
        "phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.neon"
		],
        "php-cs-fixer": [
            "vendor/bin/php-cs-fixer fix code/"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "require": {
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "fakerphp/faker": "^1.24",
        "ext-yaml": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        },
        "classmap": ["App.php"]
    }
}
